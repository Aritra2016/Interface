package MarkerIntrface;

public class MarkerInterface {

	public static void main(String[] args) {
		Viewer Rumpu = new Viewer();
		
     if(Rumpu instanceof Ticket) {
    	Rumpu.seemovie();
     }else {
    	 Rumpu.cantSeeMovie();
     }
     
	}

}
