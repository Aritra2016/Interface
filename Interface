package MarkerIntrface;

public interface Ticket {

	
	
	
	
	
	
	
	
	
}
___________________________________________________________
package MarkerIntrface;

public class Viewer implements Ticket {
 //Above one is the example of Marker Interface,
 //Marker Interface= It contains no abstract method
	void seemovie() {
		System.out.println("Viewers are watching movie");
	}
	
	void cantSeeMovie() {
	System.out.println(" Views can't able to see movie");
    }
}
























